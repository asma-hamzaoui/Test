{# templates/list.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Classes</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<!-- Header Section -->
<header class="bg-warning text-white text-center py-3 mb-4">
    <h1 class="display-4">Bienvenue Ã  la Liste des Classes</h1>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4">Liste des Classes</h2>

            {% if authors is not defined or authors is empty %}
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">Aucun classe disponible.</h4>
                </div>
            {% else %}
                <!-- Responsive Table -->
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-bordered text-center">
                        <thead class="thead-light">
                        <tr>
                            <th>Nom</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for classe in classes %}
                            <tr>
                                <td>{{ classe.Nom | upper }}</td>
                            </tr>
                            <td><a href="{{ path('deleteClasse', { id: author.id }) }}">delete</a>
                            <td><a href="{{ path('updateClasse', { id: author.id }) }}">Update</a>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Total Authors and Books -->
                <p class="mt-3 text-center">
                    Le nombre total des classes est : <span class="badge badge-info">{{ classes|length }}</span>
                </p>
            {% endif %}
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
